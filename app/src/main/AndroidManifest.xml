<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rabotnickstudios.reza" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewResume"
            android:label="@string/title_activity_new_resume" >
        </activity>
        <activity
            android:name=".GeneralSection"
            android:label="@string/title_activity_general_section" >
        </activity>
        <activity
            android:name=".EducationSection"
            android:label="@string/title_activity_education_section" >
        </activity>
        <activity
            android:name=".SkillSection"
            android:label="@string/title_activity_skill_section" >
        </activity>
        <activity
            android:name=".ExperienceSection"
            android:label="@string/title_activity_experience_section" >
        </activity>
        <activity
            android:name=".CertificationSection"
            android:label="@string/title_activity_certification_section" >
        </activity>
        <activity
            android:name=".LanguageSection"
            android:label="@string/title_activity_language_section" >
        </activity>
        <activity
            android:name=".CreatedResume"
            android:label="@string/title_activity_created_resume" >
        </activity>
        <activity
            android:name=".Nfc"
            android:label="@string/title_activity_nfc" >
        </activity>

        <uses-permission android:name="android.permission.NFC" />

        <uses-feature
            android:name="android.hardware.nfc"
            android:required="false" />

        <activity
            android:name=".EmployerBlank"
            android:label="@string/title_activity_employer_blank" >
        </activity>
        <activity
            android:name=".EmployerDbHelper"
            android:label="@string/title_activity_employer_db_helper" >
        </activity>
        <activity
            android:name=".NewProfile"
            android:label="@string/title_activity_new_profile" >
        </activity>
        <activity
            android:name=".ProfileDbHelper"
            android:label="@string/title_activity_profile_db_helper" >
        </activity>
    </application>

</manifest>
